use Andresalice\Winelivery\Models\Newsletter;

function onStart()
{
    $this['categories'] = Category::get();
    $this['recentProducts'] = Product::where("offer","!=",1)->orderBy("id","DESC")->take(4)->get();
    $this['specialProducts'] = Product::where("offer","=",1)->take(4)->get();
