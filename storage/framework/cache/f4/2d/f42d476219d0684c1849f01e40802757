    $this['randomProducts'] = Product::orderByRaw("RAND()")->take(12)->get();
    $this['user'] = Auth::getUser();
}

function onNewsletterForm()
{
    $exists = Newsletter::where("email","=",post("email_newsletter"))->exists();
    if($exists)
    {
        return false;
    }
    else
    {
        $n = new Newsletter();
        $n->email = post('email_newsletter');
        $n->save();
    }
}

