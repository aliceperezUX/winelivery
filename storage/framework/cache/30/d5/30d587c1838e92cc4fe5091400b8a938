<?php
use Andresalice\Winelivery\Models\Order;

function onStart()
{
    $orders = Order::where('user_id', Auth::getUser()->id)->orderBy("id","DESC")->get();
    foreach($orders as $order)
    {
        $order->quantity = 0;
        foreach($order->porder as $porder)
        {
            $order->quantity += $porder->quantity;
        }
    }
    $this['orders'] = $orders;
}
?>
